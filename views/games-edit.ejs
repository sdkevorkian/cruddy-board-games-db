<h2>Edit Game</h2>




<form id="edit-game" action="<%= '/game/' + name %>" method="PUT">
  <label for="name">Name:</label>
  <input name="name" type="text" value="<%= name %>">

  <label for="description">Description:</label>
  <textarea name="description" cols="30" rows="10"><%= description %></textarea>

  <label for ="number_of_players"> # of Players:</label>
  <input name = "number_of_players" type="number" value = '<%= number_of_players%>'>

  <input type="submit" value="Edit game!">
</form>
